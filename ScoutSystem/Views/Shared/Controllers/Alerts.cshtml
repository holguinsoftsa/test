
<div ng-controller="AlertController">
    <!--Confirm Window-->
    <div class="alert-window" ng-show="confirmPanel.Show">
        <div class="alert-window-main col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-6 col-lg-2">
            <div class="row">
                <div class="col-xs-12 text-center form-group">
                    <br />
                    <p>{{confirmMessage}}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <button class="btn btn-success btn-block" ng-click="clickConfirm(true)">Okay</button>
                </div>
                <div class="col-xs-6">
                    <button class="btn btn-danger btn-block" ng-click="clickConfirm(false)">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!--Success Window-->
    <div class="alert-window" ng-show="successPanel.Show">
        <div class="alert-window-main col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-6 col-lg-2">
            <div class="row">
                <div class="col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4 col-md-6 col-md-offset-3">
                    <img src="/Img/icon_checkmark.png" class="img-responsive">
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 text-center form-group">
                    <span>{{successMessage}}</span>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-4 col-md-offset-4 col-lg-6 col-lg-offset-3">
                    <button class="btn btn-success btn-block alert-success-btn" ng-click="successPanel.Close()">Okay</button>
                </div>
            </div>
        </div>
    </div>

    <!--Error Window-->
    <div class="alert-window" ng-show="errorPanel.Show">
        <div class="alert-window-main col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-6 col-lg-2">
            <div class="row">
                <div class="col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4 col-md-6 col-md-offset-3">
                    <img src="~/Img/icon_x.png" class="img-responsive">
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 text-center form-group">
                    <span>{{errorMessage}}</span>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-4 col-md-offset-4 col-lg-6 col-lg-offset-3">
                    <button class="btn btn-success btn-block alert-error-btn" ng-click="errorPanel.Close()">Okay</button>
                </div>
            </div>
        </div>
    </div>

</div>