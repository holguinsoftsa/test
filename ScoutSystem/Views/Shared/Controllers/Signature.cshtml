
<div ng-controller="SignatureController">

    <!--Window-->
    <div class="alert-window" ng-show="sigPanel.Show">
        <div class="alert-window-main alert-window-main-sharp col-xs-12 col-sm-7 col-sm-offset-4 col-md-4 col-md-offset-5">
            <div class="row">
                <div class="col-xs-12 text-center form-group">
                    <span>Please sign here.</span>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 text-center form-group">
                    <canvas id="sigCanvas" height="150" width="300" style="width:100%; height:150px;"></canvas>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <button class="btn btn-danger btn-block" ng-click="sigPanel.Close()">Cancel</button>
                </div>
                <div class="col-xs-4">
                    <button class="btn btn-info btn-block" ng-click="ClearSignature()">Clear</button>
                </div>
                <div class="col-xs-4">
                    <button class="btn btn-success btn-block" ng-click="SubmitSig()">Submit</button>
                </div>
            </div>
        </div>
    </div>

</div>